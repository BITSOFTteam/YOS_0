<UserControl x:Class="FirstFloor.ModernUI.App.YOS_Content.Notice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="stpNotice" Margin="0,0,0,5">
        <RichTextBox x:Name="richTextBox" Height="200">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width" Margin="0,15,0,0" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="저장" />
            <Button x:Name="btnInit" Content="초기화" />
            <Button x:Name="btnSend" Content="게시" />
        </StackPanel>

    </StackPanel>
</UserControl>
