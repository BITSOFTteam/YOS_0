<UserControl x:Class="FirstFloor.ModernUI.App.YOS_Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel >
                <!--#region 프로그램명-->
                <TextBlock Text="YStory Office Solution" Style="{StaticResource Heading1}" Margin="0,0,0,20"/>
                <!--#endregion-->
                
                <!--#region 공지사항-->
                <DockPanel d:LayoutOverrides="TopPosition, BottomPosition">
                    <TextBlock Style="{StaticResource Heading2}" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,0,0,10" ><Run Text="공지 사항"/></TextBlock>
                    <FlowDocumentReader Height="300" DockPanel.Dock="Top"/>
                </DockPanel>
                <!--#endregion-->

                <Grid Margin="40,20,110,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Height" Value="50" />
                            <Setter Property="Width" Value="80" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>

                        <!--#region 버튼들-->
                    <Button x:Name="btn1" Content="사용자메뉴1" Margin="10" />
                    <Button x:Name="btn2" Content="사용자메뉴2" Margin="10" Grid.Column="1"/>
                    <Button x:Name="btn3" Content="사용자메뉴3" Margin="10" Grid.Column="2"/>
                    <Button x:Name="btn4" Content="사용자메뉴4" Margin="10"  Grid.Column="3"/>
                    <Button x:Name="btn5" Content="사용자메뉴1" Margin="10" Grid.Row="1"/>
                    <Button x:Name="btn6" Content="사용자메뉴2" Margin="10" Grid.Row="1" Grid.Column="1"/>
                    <Button x:Name="btn7" Content="사용자메뉴3" Margin="10" Grid.Row="1" Grid.Column="2"/>
                    <Button x:Name="btn8" Content="사용자메뉴4" Margin="10" Grid.Column="3" Grid.Row="1"/>
                <!--#endregion-->
                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
