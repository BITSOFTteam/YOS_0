<UserControl x:Class="FirstFloor.ModernUI.App.YOS_Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel >
                <!--#region 프로그램명-->
                <TextBlock Text="YStory Office Solution" Style="{StaticResource Heading1}" Margin="0,0,0,20"/>

                <!--#endregion-->
                <!--#region 공지사항-->
                <DockPanel d:LayoutOverrides="TopPosition, BottomPosition">
                    <TextBlock Style="{StaticResource Heading2}" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,0,0,10" ><Run Text="공지 사항"/></TextBlock>
                    <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" Width="250" Height="150" Margin="0,0,10,0">
                        <Image x:Name="image" Margin="0,0,10,-162.44" HorizontalAlignment="Left" Width="250" Height="150" VerticalAlignment="Top"/>
                    </Border>
                    <mui:BBCodeBlock BBCode="[b]공지사항의 내용을 쓴다.[/b] 직원이 공지사항을 올릴 수 있도록 하고, 그 내용은 이 곳에 들어간다.  &#xA;&#xA; 왼쪽에 이미지를 하나 함께 게시할 수 있도록 한다.&#xA;&#xA;[url=http://xamlspy.com]주소링크[/url]를 걸 수도 있을 것이다. " Margin="0,0,0,37" d:LayoutOverrides="Height" DockPanel.Dock="Right" />
                </DockPanel>
                <!--#endregion-->
                <Grid Margin="40,20,110,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btn1" Content="사용자메뉴1" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button x:Name="btn2" Content="사용자메뉴2" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
                    <Button x:Name="btn3" Content="사용자메뉴3" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"/>
                    <Button x:Name="btn4" Content="사용자메뉴4" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3"/>
                    <Button x:Name="btn5" Content="사용자메뉴1" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
                    <Button x:Name="btn6" Content="사용자메뉴2" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
                    <Button x:Name="btn7" Content="사용자메뉴3" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2"/>
                    <Button x:Name="btn8" Content="사용자메뉴4" Margin="10" Width="120" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1"/>

                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
