<UserControl x:Class="FirstFloor.ModernUI.App.YOS_Pages.Reference_Pages.ItemRate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:content="clr-namespace:FirstFloor.ModernUI.App.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel MinWidth="200">
            <TextBlock Text="강좌 분류" Style="{StaticResource Heading2}" Margin="0,0,0,15" />
            <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                <RadioButton x:Name="Whole" Content="전체" IsChecked="True" Margin="5,0,15,2" GroupName="Category" FontSize="13.333" />
                <RadioButton x:Name="Purpose" Content="연구원" Margin="0,0,15,2" GroupName="Category" FontSize="13.333" />
                <RadioButton x:Name="Staff" Content="직원" Margin="0,0,15,2" GroupName="Category" FontSize="13.333" />
            </StackPanel>
            <ScrollViewer>
                <DataGrid>

                </DataGrid>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
